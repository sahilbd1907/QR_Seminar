<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Patient Details</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h2>Edit Patient Details</h2>
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>
    <form action="/patient/<%= patient._id %>/edit" method="POST">
      <div class="form-group">
        <label for="patientId">Patient ID:</label>
        <input type="text" name="patientId" id="patientId" value="<%= patient.patientId %>" required>
      </div>
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= patient.name %>" required>
      </div>
      <div class="form-group">
        <label for="phoneNo">Phone Number:</label>
        <input type="text" name="phoneNo" id="phoneNo" value="<%= patient.phoneNo %>" required>
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <textarea name="address" id="address" required><%= patient.address %></textarea>
      </div>
      <div class="form-group">
        <label for="symptoms">Symptoms:</label>
        <textarea name="symptoms" id="symptoms" required><%= patient.symptoms %></textarea>
      </div>
      <div class="form-group">
        <label for="reason">Reason for Admission:</label>
        <textarea name="reason" id="reason" required><%= patient.reason %></textarea>
      </div>
      <div class="form-group">
        <label for="admitDate">Admit Date:</label>
        <input type="date" name="admitDate" id="admitDate" value="<%= patient.admitDate.toISOString().split('T')[0] %>" required>
      </div>
      <div class="form-group">
        <label for="doctor">Doctor Appointed:</label>
        <input type="text" name="doctor" id="doctor" value="<%= patient.doctor %>" required>
      </div>
      <div class="form-group">
        <label for="bedNumber">Bed Number:</label>
        <input type="text" name="bedNumber" id="bedNumber" value="<%= patient.bedNumber %>" required>
      </div>
      <!-- (Password and reports are not updated here) -->
      <button type="submit">Update Details</button>
    </form>
    <a class="btn" href="/patient/<%= patient._id %>/dashboard">Cancel</a>
  </div>
</body>
</html>
