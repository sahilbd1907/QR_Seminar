<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Prescription</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h2>Add Prescription</h2>
    <% if (error) { %>
        <p class="error"><%= error %></p>
    <% } %>
    <form action="/patient/<%= patient._id %>/prescription" method="POST">
      <div class="form-group">  
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required>
      </div>

      <div class="form-group">  
        <label for="time">Time:</label>
        <input type="text" id="time" name="time" required>
      </div>

      <div class="form-group">
      <label for="doctor">Doctor Name:</label>
      <input type="text" id="doctor" name="doctor" required>
      </div>

      <div class="form-group">
      <label for="medication">Medication Name:</label>
      <input type="text" id="medication" name="medication">
      </div>
      
      <div class="form-group">
      <label for="dosage">Dosage:</label>
      <input type="text" id="dosage" name="dosage">
      </div>
      
      <div class="form-group">
      <label for="instructions">Instructions:</label>
      <textarea id="instructions" name="instructions" required></textarea>
      </div>
      
      <button type="submit" class="btn">Add Prescription</button>
    </form>
    <a class="btn" href="/patient/<%= patient._id %>/view">Back to Dashboard</a>
  </div>
</body>
</html>
